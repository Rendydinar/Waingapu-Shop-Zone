<% layout('layouts/boilerplate') -%>
<section class="xl:p-0 lg:p-0 md:p-0 p-4">
	<p class="rounded-full mr-auto xl:text-4xl lg:text-4xl text-2xl text-center xl:mt-4 lg:mt-4 mt-0">Waingapu Shop Zone</p>
	<div class="flex items-center w-full bg-teal-lighter">
	  <div class="w-full bg-white rounded shadow-lg xl:p-8 lg:p-8 p-4 md:max-w-sm md:mx-auto">
	  	<div class="text-left xl:mb-8 lg:mb-8 mb-4">
		    <p class="xl:text-3xl lg:text-3xl text-xl w-full text-grey-darkest">Login</p>
		    <p class="xl:text-xl lg:text-xl text-sm w-full text-grey-darkest">Silakan Masukan Akun Anda</p>
	  	</div>
 	    <form class="xl:mb-4 lg:mb-4 mb-2 md:flex md:flex-wrap md:justify-between" action="/login" method="POST">
	      <div class="flex flex-col xl:mb-4 lg:mb-4 mb-2 md:w-full">
	        <label class="xl:mb-2 lg:mb-2 mb-1 text-sm text-grey-darkest" for="username">Username</label>
	        <input class="border xl:py-2 xl:px-3 lg:py-2 lg:px-3 py-1 px-2 text-grey-darkest text-sm" type="username" name="username" id="username">
	      </div>
	      <div class="flex flex-col xl:mb-6 lg:mb-6 mb-3 md:w-full">
	      	<div class="flex flex-row">
		        <label class="xl:mb-2 lg:mb-2 mb-1 text-sm text-grey-darkest" for="password">Password</label>
	  		    <a class="block w-full text-right no-underline text-xs text-teal-500 hover:text-teal-700" href="/forgot-password">Lupa Password?</a>
	      	</div>
 	        <div class="flex -mr-px">
		        <input class="border xl:py-2 xl:px-3 lg:py-2 lg:px-3 py-1 px-2 text-grey-darkest w-full" type="password" name="password" id="password">
				<button class="flex items-center leading-normal bg-grey-lighter rounded rounded-l-none border border-l-0 border-grey-light px-3 whitespace-no-wrap text-grey-dark text-sm" type="button" id="showPassword"><i class="fas fa-eye"></i></button>
			</div>	
	      </div>
		  <div class="flex flex-col xl:mb-6 lg:mb-6 mb-3 md:w-full text-xs">
		    <label class="checkbox">
		        <input type="checkbox" name="remember" id="remember"> Ingatkan Saya
		    </label>
		   </div>	      
	        <button class="hover:bg-teal-700 block bg-teal-300 hover:bg-teal-dark text-sm mx-auto xl:mb-6 xl:p-4 lg:mb-6 lg:p-4 mb-3 p-2 rounded-full w-full" type="submit">Login</button>
	    </form>
	   <span class="block w-full text-right no-underline xl:text-sm lg:text-sm text-xs text-grey-dark">Belum mempunyai akun ? <a href="/register" class="text-teal-500 hover:text-teal-700">Daftar akun</a></span> 
	  </div>
	</div>
	
</section>
<script>
	let rememberMe = document.querySelector('#remember');
	let password = document.querySelector('#password')
	let showPassword = document.querySelector('#showPassword');
	rememberMe.addEventListener('change', function(e) {
		this.checked ? this.value="yes" : this.value="no"
	});

	showPassword.addEventListener('click', (e) => {
		if(password.type === 'text') {
			password.type = 'password'; 
			showPassword.innerHTML = '<i class="fas fa-eye-slash"></i>';
		} else {
			password.type = 'text';
			showPassword.innerHTML = '<i class="fas fa-eye"></i>'
		}
		  
	})
</script>

 