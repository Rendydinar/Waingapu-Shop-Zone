<% layout('layouts/boilerplate') -%>

<section class="xl:p-0 lg:p-0 md:p-0 p-4" id="forgotpassword">
	<p class="rounded-full mr-auto xl:text-4xl lg:text-4xl text-2xl text-center xl:mt-4 lg:mt-4 mt-0">Waingapu Shop Zone</p>
	<div class="flex items-center min-h-full w-full bg-teal-lighter">
	  <div class="w-full bg-white rounded shadow-lg p-4 m-4 md:max-w-sm md:mx-auto">
	  	<div class="text-left xl:mb-8 lg:mb-8 mb-4">
		    <p class="xl:text-3xl lg:text-3xl text-xl w-full text-grey-darkest">Lupa Password</p>
		    <p class="xl:text-xl lg:text-xl text-sm w-full text-grey-darkest">Lupa password</p>
	  	</div>
 	    <form class="mb-4 md:flex md:flex-wrap md:justify-between" action="/forgot-password?_method=PUT" method="POST">
	      <div class="flex flex-col mb-4 md:w-full">
	        <label class="mb-2 text-sm text-grey-darkest" for="email">Masukan Email Akun</label>
	        <input class="text-sm border xl:py-2 xl:px-3 lg:py-2 lg:px-3 py-1 px-2 text-grey-darkest" type="email" name="email" id="email" placeholder="email...">
	      </div>
	      <button class="block bg-teal-300 hover:bg-teal-dark text-sm mx-auto xl:mb-6 xl:p-4 lg:mb-6 lg:p-4 mb-3 p-2 rounded-full w-full" type="submit">Reset Password</button>
	    </form>
	  </div>
	</div>
</section>