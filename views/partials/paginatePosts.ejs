<!-- partial untuk merender navigasi pagination post/produk -->

<div class="bg-white xl:px-4 xl:py-3 lg:px-4 lg:py-3 px-2 py-1 flex items-center justify-between border-t border-gray-200">
  <div class="sm:flex-1 sm:flex sm:items-center sm:justify-between">
    <div>
      <p class="xl:text-sm lg:text-sm text-xs leading-5 text-gray-700">
        Showing
        <span class="font-medium"><%=products.page%>
        </span>
        to
        <span class="font-medium"><%=products.totalPages%>
        </span>
        of
        <span class="font-medium">
	        <%=products.totalDocs%>
        </span>
        results
      </p>
    </div>
    <div>
      <nav class="relative z-0 inline-flex shadow-sm">
    		<!-- uji kondisi navigasi prev -->
    		<% if(products.page - 1) { %>
    		    <a href="<%= paginateUrl %><%= products.page - 1 %>" class="relative inline-flex items-center xl:px-2 xl:py-2 lg:px-2 lg:py-2 px-1 py-1 rounded-l-md border border-gray-300 bg-white xl:text-sm lg:text-sm text-xs leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150" aria-label="Previous">
    	          <svg class="xl:h-5 xl:w-5 lg:h-5 lg:w-5 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
    	            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
    	          </svg>
    	        </a>
    		<%  } %>

          <!-- cek apakah jumlah post yang ditampilkan lebih dari satu -->
    		<% if(products.totalPages > 1 && products.docs.length) { %>
    			<!-- perulangan untuk menampilkan daftar navigasi -->
    			<% for(let i = 1; i <= products.totalPages; i++) {%>	
    				<a href="<%= paginateUrl %><%= i %>" <%= i === products.page ? 'style=color:#000;' : '' %> class="-ml-px relative inline-flex items-center xl:px-4 xl:py-2 lg:px-4 lg:py-2 px-2 py-1 border border-gray-300 bg-white xl:text-sm lg:text-sm text-xs leading-5 font-medium text-gray-700 hover:text-gray-500 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
			        <%= i %>
		        </a>
    			<%  } %>
    		<%  } %>

           <!--  <span class="-ml-px relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-700">
              ...
            </span>
     -->
    		<!-- uji kondisi navigasi next -->
    		<% if((products.page + 1) <= products.totalPages) { %>
    	        <a href="<%= paginateUrl %><%= products.page + 1 %>" class="-ml-px relative inline-flex items-center xl:px-2 xl:py-2 lg:px-2 lg:py-2 px-1 py-1 rounded-r-md border border-gray-300 bg-white xl:text-sm lg:text-sm text-xs leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150" aria-label="Next">
    	          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
    	            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    	          </svg>
    	        </a>
    		<%  } %>        
   
      </nav>
    </div>
  </div>
</div>
